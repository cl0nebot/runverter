<form class="uk-form">
  <div class="uk-grid uk-grid-collapse tool-line">
    <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
        Running a distance of &nbsp;
    </div>
    <div class="uk-width-1-1 uk-width-medium-4-6 uk-width-large-3-5">
      {{#if showRunLengthKm}}<span>{{input value=model.lengthKmStackKm size="2" maxlength="2" type="text"}} , {{input value=model.lengthKmStackDecimal size="2" maxlength="2" type="text"}}</span>{{/if}}
      {{#if showRunLengthMi}}<span>{{input value=model.lengthMiStackMi size="2" maxlength="2" type="text"}} , {{input value=model.lengthMiStackDecimal size="2" maxlength="2" type="text"}}</span>{{/if}}
      {{#x-select value=runLengthMetricsSelected class="runLength"}}
        {{#each runLengthMetrics as |item|}}
          {{#x-option value=item.id}}{{item.label}}{{/x-option}}
        {{/each}}
      {{/x-select}}
    </div>
  </div>
  <div class="uk-grid uk-grid-collapse tool-line">
    <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
      in &nbsp;
    </div>
    <div class="uk-width-1-1 uk-width-medium-4-6 uk-width-large-3-5">
      {{input value=model.timeStackHr size="2" maxlength="2" type="text"}} hr {{input value=model.timeStackMin size="2" maxlength="2" type="text"}} min {{input value=model.timeStackSec size="2" maxlength="2" type="text"}} sec
    </div>
  </div>
  <div class="uk-grid uk-grid-collapse tool-line">
    <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
      requires a pace of &nbsp;
    </div>
    <div class="uk-width-1-1 uk-width-medium-4-6 uk-width-large-3-5">
      {{#if showRunTempoMinKm}}{{input value=model.paceMinPerKmStackMin size="2" maxlength="2" type="text"}} : {{input value=model.paceMinPerKmStackSec size="2" maxlength="2" type="text"}}{{/if}}
      {{#if showRunTempoMinMi}}{{input value=model.paceMinPerMiStackMin size="2" maxlength="2" type="text"}} : {{input value=model.paceMinPerMiStackSec size="2" maxlength="2" type="text"}}{{/if}}
      {{#if showRunTempoKmH}}{{input value=model.speedKmHrStackKm size="2" maxlength="2" type="text"}} , {{input value=model.speedKmHrStackDecimal size="2" maxlength="2" type="text"}}{{/if}}
      {{#if showRunTempoMiH}}{{input value=model.speedMiHrStackMi size="2" maxlength="2" type="text"}} , {{input value=model.speedMiHrStackDecimal size="2" maxlength="2" type="text"}}{{/if}}
      {{view "select" value=runTempoMetricsSelected content=runTempoMetrics optionValuePath="content.id" optionLabelPath="content.label" class="runTempo"}}
    </div>
  </div>
</form>
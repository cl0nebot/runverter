<form class="uk-form">
  <div class="uk-grid uk-grid-collapse tool-line">
    <div class="uk-width-1-1 uk-width-medium-2-5 tool-label">
      A distance of &nbsp;
    </div>
    <div class="uk-width-1-1 uk-width-medium-3-5">
      {{input value=model.lengthKmStackKm min="0" max="999" step="1" type="number"}} , {{input value=model.lengthKmStackDecimal min="0" max="99" step="1" type="number"}} km
    </div>
  </div>
  <div class="uk-grid uk-grid-collapse tool-line">
    <div class="uk-width-1-1 uk-width-medium-2-5 tool-label">
      equals a distance of &nbsp;
    </div>
    <div class="uk-width-1-1 uk-width-medium-3-5">
      {{input value=model.lengthMiStackMi min="0" max="999" step="1" type="number"}} , {{input value=model.lengthMiStackDecimal min="0" max="99" step="1" type="number"}} mi
    </div>
  </div>
  <div class="uk-grid uk-grid-collapse tool-line">
    <div class="uk-width-1-1 uk-width-medium-2-5 tool-label">
      or &nbsp;
    </div>
    <div class="uk-width-1-1 uk-width-medium-3-5">
      {{input value=model.lengthM min="0" max="999999" step="1" type="number"}} m
    </div>
  </div>
</form>

{{#if visible}}
  <form class="uk-form">
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
        {{t "tools.pc.minkmLabel"}} &nbsp;
      </div>
      <div class="uk-width-1-1 uk-width-medium-4-6 uk-width-large-3-5">
        {{input value=run.paceMinPerKmStackMin min="0" max="99" step="1" type="number"}} {{t "metrics.tempo.separator"}} {{input value=run.paceMinPerKmStackSec min="0" max="60" step="1" type="number"}} {{t "metrics.tempo.minkm"}}
      </div>
    </div>
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
        {{t "tools.pc.minmiLabel"}} &nbsp;
      </div>
      <div class="uk-width-1-1 uk-width-medium-4-6 uk-width-large-3-5">
        {{input value=run.paceMinPerMiStackMin min="0" max="99" step="1" type="number"}} {{t "metrics.tempo.separator"}} {{input value=run.paceMinPerMiStackSec min="0" max="60" step="1" type="number"}} {{t "metrics.tempo.minmi"}}
      </div>
    </div>
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
        {{t "tools.pc.kmhLabel"}} &nbsp;
      </div>
      <div class="uk-width-1-1 uk-width-medium-4-6 uk-width-large-3-5">
        {{input value=run.speedKmHrStackKm min="0" max="99" step="1" type="number"}} {{t "metrics.distance.separator"}} {{input value=run.speedKmHrStackDecimal min="0" max="99" step="1" type="number"}} {{t "metrics.tempo.kmh"}}
      </div>
    </div>
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
        {{t "tools.pc.mihLabel"}} &nbsp;
      </div>
      <div class="uk-width-1-1 uk-width-medium-4-6 uk-width-large-3-5">
        {{input value=run.speedMiHrStackMi min="0" max="99" step="1" type="number"}} {{t "metrics.distance.separator"}} {{input value=run.speedMiHrStackDecimal min="0" max="99" step="1" type="number"}} {{t "metrics.tempo.mih"}}
      </div>
    </div>
  </form>
{{/if}}

{{#if visible}}
  predictedRun.lengthM: {{prediction.predictedRun.lengthM}}<br />
  predictedRun.timeSec: {{prediction.predictedRun.timeSec}}<br />
  achievedRun.lengthM: {{prediction.achievedRun.lengthM}}<br />
  achievedRun.timeSec: {{prediction.achievedRun.timeSec}}<br />
  <form class="uk-form uk-container-center">
    <div class="uk-grid uk-grid-collapse toolLine">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 toolLabel">
        <span>{{t "tools.rp.achievedDistanceLabel"}}</span>
      </div>
      <div class="uk-width-1-1 suggest-select-container {{expertModeClass}} {{achievedRacePickerVisibleClass}}">
        {{#if showAchievedRunLengthKm}}<span>{{form-helper/number-input value=prediction.achievedRun.lengthKmStackKm maxLength="3" focus=achievedRacePickerVisible title=tooltipAchievedLengthKm}} {{t "metrics.distance.separator"}} {{form-helper/number-input value=prediction.achievedRun.lengthKmStackDecimalFixed addLeadingZeros=true focus=achievedRacePickerVisible title=tooltipAchievedLengthKm}}</span>{{/if}}
        {{#if showAchievedRunLengthMi}}<span>{{form-helper/number-input value=prediction.achievedRun.lengthMiStackMi maxLength="3" focus=achievedRacePickerVisible title=tooltipAchievedLengthMi}} {{t "metrics.distance.separator"}} {{form-helper/number-input value=prediction.achievedRun.lengthMiStackDecimalFixed addLeadingZeros=true focus=achievedRacePickerVisible title=tooltipAchievedLengthMi}}</span>{{/if}}
        {{#x-select value=achievedRunMetricsSelected class="achievedRunLength"}}
          {{#each predictedRunLengthMetrics as |item|}}
            {{#x-option value=item.key}}{{item.label}}{{/x-option}}
          {{/each}}
        {{/x-select}}
        {{form-helper/suggest-select items=races.templates identifier="race-picker-achieved-race" action="setAchievedRace" label=(t "races.label")}}
      </div>
    </div>
    <div class="uk-grid uk-grid-collapse toolLine">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 toolLabel">
        <span>{{t "tools.rp.achievedTimeLabel"}}</span>
      </div>
      <div class="uk-width-1-1 suggest-select-container {{expertModeClass}} {{achievedTimePickerVisibleClass}}">
      </div>
    </div>
    <div class="uk-grid uk-grid-collapse toolLine">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 toolLabel">
        <span>{{t "tools.rp.predictedDistanceLabel"}}</span>
      </div>
      <div class="uk-width-1-1 suggest-select-container {{expertModeClass}} {{predictedRacePickerVisibleClass}}">
        {{#if showPredictedRunLengthKm}}<span>{{form-helper/number-input value=run.lengthKmStackKm maxLength="3" focus=predictedRacePickerVisible title=tooltipPredictedLengthKm}} {{t "metrics.distance.separator"}} {{form-helper/number-input value=run.lengthKmStackDecimalFixed addLeadingZeros=true focus=predictedRacePickerVisible title=tooltipPredictedLengthKm}}</span>{{/if}}
        {{#if showPredictedRunLengthMi}}<span>{{form-helper/number-input value=run.lengthMiStackMi maxLength="3" focus=predictedRacePickerVisible title=tooltipPredictedLengthMi}} {{t "metrics.distance.separator"}} {{form-helper/number-input value=run.lengthMiStackDecimalFixed addLeadingZeros=true focus=predictedRacePickerVisible title=tooltipPredictedLengthMi}}</span>{{/if}}
        {{#x-select value=predictedRunMetricsSelected class="predictedRunLength"}}
          {{#each predictedRunLengthMetrics as |item|}}
            {{#x-option value=item.key}}{{item.label}}{{/x-option}}
          {{/each}}
        {{/x-select}}
        {{form-helper/suggest-select items=races.templates identifier="race-picker-predicted-race" action="setPredictedRace" label=(t "races.label")}}
      </div>
    </div>
    <div class="uk-grid uk-grid-collapse toolLine">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 toolLabel">
        <span>{{t "tools.rp.predictedTimeLabel"}}</span>
      </div>
      <div class="uk-width-1-1 suggest-select-container {{expertModeClass}} {{predictedTimePickerVisibleClass}}">
        {{form-helper/number-input value=run.timeStackHr minLength="1" focus=predictedTimePickerVisible title=tooltipPredictedTimeHr}} {{t "metrics.time.hr"}} {{form-helper/number-input value=run.timeStackMinFixed focus=predictedTimePickerVisible title=tooltipPredictedTimeMin}} {{t "metrics.time.min"}} {{form-helper/number-input value=run.timeStackSecFixed focus=predictedTimePickerVisible title=tooltipPredictedTimeSec}} {{t "metrics.time.sec"}}
        {{form-helper/suggest-select items=predictedTimesSuggestions identifier="predicted-time-predicted-race-predictor" action="setPredictedTime" label=(t "targetTimes.label")}}
      </div>
    </div>
  </form>
{{/if}}
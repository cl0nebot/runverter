{{#if visible}}
  <form class="uk-form">
      <div class="uk-grid uk-grid-collapse tool-line">{{run.lengthM}}</div>
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
        {{t "tools.pca.distanceLabel"}} &nbsp;
      </div>
      <div class="uk-width-1-1 uk-width-medium-4-6 uk-width-large-3-5">
        {{#if showRunLengthKm}}<span>{{input value=run.lengthKmStackKm min="0" max="999" step="1" type="number" class="digits-3"}} {{t "metrics.distance.separator"}} {{input value=run.lengthKmStackDecimalFixed min="0" max="99" step="1" type="number" class="digits-2"}}</span>{{/if}}
        {{#if showRunLengthMi}}<span>{{input value=run.lengthMiStackMi min="0" max="999" step="1" type="number" class="digits-3"}} {{t "metrics.distance.separator"}} {{input value=run.lengthMiStackDecimalFixed min="0" max="99" step="1" type="number" class="digits-2"}}</span>{{/if}}
        {{#x-select value=runLengthMetricsSelected class="runLength"}}
          {{#each runLengthMetrics as |item|}}
            {{#x-option value=item.key}}{{item.label}}{{/x-option}}
          {{/each}}
        {{/x-select}}
      </div>
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
        {{t "tools.pca.distanceLabel"}} &nbsp;
      </div>
      <div class="uk-width-1-1 uk-width-medium-4-6 uk-width-large-3-5">
        <span>{{number-input value=run.lengthKmStackKm maxlength="3" min="0" max="999" step="1" class="digits-3"}} {{t "metrics.distance.separator"}} {{number-input value=run.lengthKmStackDecimalFixed maxlength="2" min="0" max="99" step="1" class="digits-2"}}</span>
      </div>
    </div>
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-5 tool-label">
        {{t "tools.lc.mLabel"}}&nbsp;
      </div>
      <div class="uk-width-1-1 uk-width-medium-3-5">
        {{number-input value=run.lengthMStackM maxlength="6" min="0" max="999999" step="1" class="digits-6"}} {{t "metrics.distance.separator"}} {{input value=run.lengthMStackDecimal min="0" max="99" step="1" type="number" class="digits-2"}} {{t "metrics.distance.m"}}
      </div>
    </div>
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
        {{t "tools.pca.timeLabel"}} &nbsp;
      </div>
      <div class="uk-width-1-1 uk-width-medium-4-6 uk-width-large-3-5">
        {{input value=run.timeStackHr  min="0" max="99" step="1" type="number" class="digits-2"}} {{t "metrics.time.hr"}} {{input value=run.timeStackMin min="0" max="60" step="1" type="number" class="digits-2"}} {{t "metrics.time.min"}} {{input value=run.timeStackSec min="0" max="60" step="1" type="number" class="digits-2"}} {{t "metrics.time.sec"}}
      </div>
    </div>
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
        {{t "tools.pca.paceLabel"}} &nbsp;
      </div>
      <div class="uk-width-1-1 uk-width-medium-4-6 uk-width-large-3-5">
        {{#if showRunTempoMinKm}}{{input value=run.paceMinPerKmStackMin min="0" max="99" step="1" type="number" class="digits-2"}} {{t "metrics.tempo.separator"}} {{input value=run.paceMinPerKmStackSec min="0" max="99" step="1" type="number" class="digits-2"}}{{/if}}
        {{#if showRunTempoMinMi}}{{input value=run.paceMinPerMiStackMin min="0" max="99" step="1" type="number" class="digits-2"}} {{t "metrics.tempo.separator"}} {{input value=run.paceMinPerMiStackSec min="0" max="99" step="1" type="number" class="digits-2"}}{{/if}}
        {{#if showRunTempoKmH}}{{input value=run.speedKmHrStackKm min="0" max="99" step="1" type="number" class="digits-2"}} {{t "metrics.distance.separator"}} {{input value=run.speedKmHrStackDecimal min="0" max="99" step="1" type="number" class="digits-2"}}{{/if}}
        {{#if showRunTempoMiH}}{{input value=run.speedMiHrStackMi min="0" max="99" step="1" type="number" class="digits-2"}} {{t "metrics.distance.separator"}} {{input value=run.speedMiHrStackDecimal min="0" max="99" step="1" type="number" class="digits-2"}}{{/if}}
        {{#x-select value=runTempoMetricsSelected class="runTempo"}}
          {{#each runTempoMetrics as |item|}}
            {{#x-option value=item.key}}{{item.label}}{{/x-option}}
          {{/each}}
        {{/x-select}}
      </div>
    </div>
  </form>
{{/if}}

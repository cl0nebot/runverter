{{#if visible}}
  <form class="uk-form">
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-5 tool-label">
        {{t "tools.lc.kmLabel"}}&nbsp;
      </div>
      <div class="uk-width-1-1 uk-width-medium-3-5">
        {{form-helper/number-input value=run.lengthKmStackKm maxLength="3" class="digits-3"}} {{t "metrics.distance.separator"}} {{form-helper/number-input value=run.lengthKmStackDecimalFixed addLeadingZeros=true class="digits-2"}} {{t "metrics.distance.km"}}
      </div>
    </div>
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-5 tool-label">
        {{t "tools.lc.miLabel"}}&nbsp;
      </div>
      <div class="uk-width-1-1 uk-width-medium-3-5">
        {{form-helper/number-input value=run.lengthMiStackMi maxLength="3" class="digits-3"}} {{t "metrics.distance.separator"}} {{form-helper/number-input value=run.lengthMiStackDecimalFixed addLeadingZeros=true class="digits-2"}} {{t "metrics.distance.mi"}}
      </div>
    </div>
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-5 tool-label">
        {{t "tools.lc.mLabel"}}&nbsp;
      </div>
      <div class="uk-width-1-1 uk-width-medium-3-5">
        {{form-helper/number-input value=run.lengthMStackM minLength="3" maxLength="6" class="digits-6"}} {{t "metrics.distance.separator"}} {{form-helper/number-input value=run.lengthMStackDecimalFixed addLeadingZeros=true class="digits-2"}} {{t "metrics.distance.m"}}
      </div>
    </div>
  </form>
{{/if}}

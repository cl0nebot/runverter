{{control-panel expertMode=expertMode imprintVisible=imprintVisible}}
<div class="header {{expertModeClass}}">
  {{#link-to "tools.index" (query-params selectedToolKey="pca" imprintVisible=false) }}&nbsp;{{/link-to}}
</div>

<div class="intro {{selectedToolClass}} {{expertModeClass}}">
  {{tool-selector menuItems=tools selectedMenuItem=selectedTool defaultValue=selectedToolKey action="navigateTo"}}
</div>
<div class="tools uk-container uk-container-center {{selectedToolClass}} {{expertModeClass}}">
  {{pace-calculator expertMode=expertMode run=model selectedMenuItem=selectedTool runLengthMetricsSelected=runLengthMetricsQuery runLengthMetricsSelected=runLengthMetricsQuery runTempoMetricsSelected=runTempoMetricsQuery}}
  {{pace-converter expertMode=expertMode run=model selectedMenuItem=selectedTool}}
  {{length-converter expertMode=expertMode run=model selectedMenuItem=selectedTool}}
  {{race-predictor expertMode=expertMode run=model selectedMenuItem=selectedTool}}
</div>
{{imprint-page expertModeClass=expertModeClass run=model visible=imprintVisible}}
<div class="header">&nbsp;</div>
<div class="intro">
  <h1>
    {{menuItemsSelected.label}}
    {{#x-select value=menuItemsSelected.route action="navigateTo" class="menu"}}
      {{#each menuItems as |item|}}
        {{#x-option value=item.route}}{{item.name}}{{/x-option}}
      {{/each}}
    {{/x-select}}
  </h1>
  <p>{{menuItemsSelected.description}}</p>
</div>
<div class="uk-container uk-container-center">
  {{outlet "main"}}
</div>